<div class="row">    
    {{#each curri}}
    <div class="col-md-3">
        <div class="card shadow p-3 muestras">
            <div class="card-body">
                <h4 class="card-title text-primary d-flex justify-content-between align-items-center">
                    {{nombre}} <a href="/Curriculums/Edit-Cv/{{_id}}"><i class="fas fa-edit editarCV"></i></a>
                    <a href="/ReadCurriculum/{{_id}}">
                    <br>
                    <i class="fas fa-list-alt revisarCV"></i></a>
                </h4>
                <div class="card-body">
                    <p class="badge badge-warning text-wrap rounded correo">{{email}}</p>
                </div>
                <div class="card-body text-secondary rounded">
                    <p class="text-warning text-center border border-rounded border-warning vocacion">{{vocacion}}</p>    
                </div>            
            </div>
           
            <form action="/Curriculums/Delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-block btn-sm">
                Borrar
            </button>
            </form>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto shadow-lg">
        <div class="card-body mb-3">
            <h1 class="text-warning">Hola <div class="text-success">{{user.nombre}}</div></h1>
            <p class="lead">No hay CVs a√∫n!</p>
            <a href="/add-newCurriculum" class="btn btn-success btn-block">Crea tu CV ahora!</a>
        </div>
    </div>
    {{/each}}
</div>